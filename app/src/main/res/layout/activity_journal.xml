<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".JournalActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="top"
        android:background="#EDACAC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <ImageButton
            android:id="@+id/imageSettings"
            android:layout_width="97dp"
            android:layout_height="46dp"
            android:layout_marginStart="189dp"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:text="My Journal"
            android:textAlignment="center"
            android:textColor="#272727"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.794"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="193dp"
            android:layout_height="35dp"
            android:background="@drawable/edittext_bg"
            android:hint="Note Title"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <EditText
            android:id="@+id/contentEditText"
            android:layout_width="324dp"
            android:layout_height="120dp"
            android:background="@drawable/edittext_bg"
            android:hint="Note Content"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.116" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginEnd="63dp"
            android:backgroundTint="#C18686"
            android:text="Save Notes"
            android:textColorLink="#DDAAAA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.327" />

        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="326dp"
            android:layout_height="34dp"
            android:text="Notes:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.427" />

        <LinearLayout
            android:id="@+id/notesContainer"
            android:layout_width="327dp"
            android:layout_height="85dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.526" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="-70dp"
        android:background="#EDACAC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <ImageView
            android:id="@+id/imageEntry"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/corners3"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:src="@drawable/add_logo" />

        <ImageButton
            android:id="@+id/imageMood"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginStart="107dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/corners2"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/smile"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/imageToDo"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginStart="213dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/corners2"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:src="@drawable/to_do" />

        <ImageButton
            android:id="@+id/imageCalendar"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginStart="321dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/corners2"
            android:paddingTop="5dp"
            android:src="@drawable/calendar" />
    </FrameLayout>


</LinearLayout>